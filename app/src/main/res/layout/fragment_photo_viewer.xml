<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <temich.win.cammery.ui.viewer.TouchImageView
        android:id="@+id/view_full_screen_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/view_full_screen_progress"
        style="@android:style/Widget.Holo.ProgressBar.Large"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:indeterminate="true" />

    <ImageButton
        android:id="@+id/btn_photo_viewer_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:padding="20dp"
        android:src="@drawable/ic_cancel_preview"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/btn_photo_viewer_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:padding="20dp"
        android:src="@drawable/ic_delete_photo"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/btn_photo_viewer_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:padding="20dp"
        android:src="@drawable/ic_save_preview"
        android:visibility="invisible" />

</RelativeLayout>